# Sample .env file for TideCloak Cucumber.js tests

# Test execution options
HEADLESS=true                    # Set to 'false' to see browser during tests
PRESERVE_ENV=false               # Set to 'true' to reuse existing containers between runs

# Playground app configuration (optional)
LOCAL_APP_DIR=""                 # Path to local playground app directory (if not cloning)
APP_START_SCRIPT="dev"           # npm script to start the app (default: dev)

# File watching for WSL environments (optional)
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=1

# EMAIL/SMTP CONFIG
# Used for email verification and user invite tests
CONFIGURED=false                 # Set to 'true' once SMTP is configured
TEMP_EMAIL_DEBUG_MAIL=""         # SMTP auth user or email
TEMP_EMAIL_FROM=""               # From email address
TEST_USER_EMAIL=""               # Test user email address
TEMP_EMAIL_PASSWORD=""           # SMTP password
SMTP_PORT=587                    # SMTP port (587, 2525, or 25)
SMTP_HOST=""                     # SMTP host

# MailSlurp configuration (for email verification tests)
MAILSLURP_API=""                 # MailSlurp API key
MAILSLURP_INBOX_ID=""            # MailSlurp inbox ID
MAILSLURP_TIMEOUT_MS=60000       # Timeout for waiting for emails

# Optional: Override email used during Tide sign-up
TIDE_SIGNUP_EMAIL=""

# Optional: Override username/email for password recovery tests
TIDE_RECOVERY_USERNAME=""
